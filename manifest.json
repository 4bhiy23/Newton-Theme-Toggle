{
  "manifest_version": 3,
  "name": "Newton Theme Toggle",
  "version": "1.0",
  "description": "Toggle and persist theme using popup button",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://my.newtonschool.co/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/newtonSchool_16.png",
      "48": "icons/newtonSchool_48.png",
      "128": "icons/newtonSchool_128.png"
    }
  },
  "icons": {
    "16": "icons/newtonSchool_16.png",
    "48": "icons/newtonSchool_48.png",
    "128": "icons/newtonSchool_128.png"
  }
}
